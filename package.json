{
  "name": "atomic-book",
  "version": "0.0.1",
  "description": "A book of atomic components",
  "keywords": [
    "react",
    "storybook",
    "rollup",
    "webpack"
  ],
  "author": "po.nguyen@shopback.com",
  "license": "MIT",
  "repository": "https://github.com/poepanda/atomic-book",
  "publishConfig": {
    "registry": "http://nexus.infra.shopback.com:8081/repository/npm-internal/"
  },
  "scripts": {
    "start": "cross-env STORYBOOK_DEBUG=true SBCONFIG_CONFIG_DIR=scripts/storybook start-storybook -p 4000 --quiet --ci --no-manager-cache",
    "build:package": "cp ./package.json ./dist && cp ./.npmrc ./dist && cp -r ./libs ./dist",
    "build:components": "NODE_OPTIONS=--max_old_space_size=2048 node ./scripts/build/build.js",
    "build:css": "node ./scripts/build/build-css",
    "build": "npm run build:components && npm run build:css && npm run build:package",
    "build-watch": "npm run build -- -w",
    "prepublish-documentation": "build-storybook -c scripts/storybook -o storybook-static",
    "publish-documentation": "storybook-to-ghpages --out=storybook-static --existing-output-dir=storybook-static",
    "start-documentation": "npx http-server storybook-static",
    "test:dev": "jest --watch",
    "test": "jest",
    "release": "standard-version",
    "lint": "node node_modules/eslint/bin/eslint.js --fix --max-warnings=0 src",
    "precommit": "lint-staged",
    "generate": "plop --plopfile scripts/templates/index.js",
    "update-packages": "npx npm-check-updates -u && npm i"
  },
  "dependencies": {
    "@shopback/design-tokens": "^0.4.0",
    "@types/node": "^15.0.3",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.4",
    "classnames": "^2.3.1",
    "colors": "^1.4.0",
    "lodash": "^4.17.21",
    "prop-types": "15.7.2",
    "react": "file:./libs/westeros/react",
    "react-dom": "file:./libs/westeros/react-dom",
    "swiper": "^6.6.1",
    "typescript": "^4.2.4",
    "westeros-common-client": "0.0.35"
  },
  "devDependencies": {
    "@babel/core": "7.9.0",
    "@babel/plugin-proposal-object-rest-spread": "7.9.0",
    "@babel/preset-env": "7.9.0",
    "@babel/preset-react": "7.9.4",
    "@babel/preset-typescript": "^7.13.0",
    "@rollup/plugin-commonjs": "11.0.2",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-typescript": "^8.2.1",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-docs": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addon-storysource": "^6.2.9",
    "@storybook/addons": "^6.2.9",
    "@storybook/node-logger": "^6.2.9",
    "@storybook/preset-create-react-app": "^3.1.7",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^6.2.9",
    "@storybook/theming": "^6.2.9",
    "@testing-library/jest-dom": "5.3.0",
    "@testing-library/react": "10.0.2",
    "@testing-library/react-hooks": "3.2.1",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.169",
    "@types/marked": "^2.0.2",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "autoprefixer": "^10.2.5",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.1.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-polyfill": "6.26.0",
    "clean-css": "^5.1.2",
    "cross-env": "7.0.2",
    "eslint": "6.8.0",
    "eslint-config-react-app": "5.2.1",
    "eslint-plugin-flowtype": "4.7.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "3.0.0",
    "glob": "^7.1.7",
    "husky": "4.2.3",
    "jest": "^26.6.3",
    "jest-junit": "10.0.0",
    "jest-scss-transform": "^1.0.1",
    "jest-transform-css": "2.0.0",
    "lint-staged": "10.1.1",
    "marked": "0.8.2",
    "node-sass": "^4.14.1",
    "plop": "^2.7.4",
    "postcss": "^8.2.15",
    "postcss-color-rebeccapurple": "^6.0.0",
    "prettier": "2.0.2",
    "react-hooks-testing-library": "0.6.0",
    "react-test-renderer": "16.13.1",
    "rimraf": "3.0.2",
    "rollup": "^2.47.0",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "sass": "^1.34.0",
    "sass-loader": "8.0.2",
    "standard-version": "7.1.0",
    "ts-jest": "^26.5.6",
    "tslib": "^2.2.0"
  },
  "peerDependencies": {
    "react": "16.*",
    "react-dom": "16.*"
  },
  "prettier": {
    "jsxBracketSameLine": true,
    "printWidth": 120,
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "**/*.{js,json,css}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.js": [
      "npm run lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "post-checkout": "if [[ $HUSKY_GIT_PARAMS  =~ 1$ ]]; then npm install --no-package-lock; fi",
      "post-merge": "npm install --no-package-lock",
      "post-rebase": "npm install",
      "pre-commit": "npm run test && lint-staged"
    }
  }
}
